# REDAI System Configuration Template
# Copy this file to .env and fill in the values

# Backend Services Ports (for reference)
# Main Upload API: 8080
# Shortlisting API: 5001
# Interview API: 5002
# Settings API: 5003
# Analytics API: 5005

# --- Database ---
MONGODB_URI=mongodb://localhost:27017/recruit_ai

# --- AI & LLM ---
OPENAI_API_KEY=your_openai_api_key_here
ENABLE_LLM_MODEL=true

# --- Email Configuration (SMTP) ---
# Used for sending interview invites and notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password

# --- Google API Configuration ---
# Used for Calendar and Meet integration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_API_KEY=your_google_api_key
GOOGLE_TOKEN_JSON= # Optional: content of token.json as string
GOOGLE_CREDENTIALS_JSON= # Optional: content of credentials.json as string
GOOGLE_SERVICE_ACCOUNT_JSON= # Optional: content of service account key

# --- External Integrations (Optional) ---
HF_TOKEN=your_hugging_face_token
LINKEDIN_ACCESS_TOKEN=your_linkedin_token
FB_PAGE_ID=your_facebook_page_id
ACCESS_TOKEN=your_fb_access_token
IG_USER_ID=your_instagram_user_id

# --- Frontend Configuration ---
# These are used by the Vite frontend
VITE_CORE_API_BASE_URL=http://localhost:8080
VITE_SHORTLISTING_API_URL=http://localhost:5001
VITE_INTERVIEW_API_URL=http://localhost:5002
VITE_SETTINGS_API_URL=http://localhost:5003
